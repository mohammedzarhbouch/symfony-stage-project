    <div class="page-title-home">
        <h1>USER POSTS</h1>
    </div>

    <div class="container">
        <div class="button-container">
            <a href="{{ path('create-post') }}" class="create-post-button">Create Post!</a>
            <a href="{{ path('show-posts') }}" class="my-posts-button">Show my posts!</a>


        </div>

        <div class="home-main">
            {% for post in posts %}
                <div class="post">
                    <a class="inspect-link" href="{{ path('inspect-post', { 'id': post.id }) }}">
                        <div class="title-data">{{ post.title }}</div>
                    </a>
                    <div class="text-data">{{ post.text }}</div>
                    <div class="home-post-footer">

                        <a class="home-post-date">{{ post.date|ago }}</a>
                        <div class="homePostedBy">{{ post.user.username }}</div>
                    </div>
                </div>
            {% else %}
                <p>No posts available.</p>
            {% endfor %}
        </div>
    </div>

{% endblock %}