<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    <link rel="stylesheet" href="{{ asset('css/header.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <link rel="stylesheet" href="{{ asset('css/post.css') }}">
    <link rel="stylesheet" href="{{ asset('css/myposts.css') }}">
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
    <link rel="stylesheet" href="{{ asset('css/comment.css') }}">


    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{# Move the header outside the body block so it shows up on all pages #}
<header>
    <a href="{{ path('home') }}">Home</a>
    <a href="{{ app.user ? path('app_logout') : 'login'}}">{{ app.user ? 'Logout' : 'Login' }}</a>
    <a href="{{ path('app_register') }}">Register</a>

    {% if app.user is not null%}
    <a href="{{ path('profilepage', { 'id': app.user.id }) }}">Profile</a>
    {% endif %}

</header>

{% block body %}
    {# Content of the child templates will go here #}
{% endblock %}
</body>
</html>
