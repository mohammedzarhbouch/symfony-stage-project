{% extends 'base.html.twig' %}


{% block body %}

<div class="inspect-container">
    <div class="inspect-post-container">
    <div class="inspect-post">

        <div class="title-data">{{ post.title }}</div>
        <div class="text-data">{{ post.text }}</div>

        <div class="myposts-footer">

            <a class="inspect-post-date">{{ post.date|date("d-m-Y") }}</a>
            <div class="postedBy">{{ post.user.username }}</div>
        </div>

    </div>
    </div>

{#    hier komt de comment plaatsen box waar je de comment in gaat typen en kunt plaatsen#}
    <div class="comment-form-container">

            <input class="comment-input" type="text" placeholder="Enter your comment here...">

        <button class="comment-submit">Submit</button>
    </div>



    <div class="comment-container">

        <div class="comment-data">
            <div class="comment-username">USERNAME</div>
            <div class="comment-date">DATUM</div>
        </div>
        <div class="comment-box"> hier komt de comment te staan</div>
    </div>
</div>
{% endblock %}